<?xml version="1.0" encoding="utf-8"?>
 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a0d69a">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a0d69a">

        <View
            android:id="@+id/imageAndNameBackground"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_rect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/PhoneNumber1Background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_rect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageAndNameBackground" />

        <View
            android:id="@+id/PhoneNumber2Background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_rect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PhoneNumber1Background" />



        <View
            android:id="@+id/Email1Background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/shape_rect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PhoneNumber2Background" />

        <View
            android:id="@+id/Email2Background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_rect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Email1Background" />



        <View
            android:id="@+id/DescriptionBackground"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:layout_marginTop="52dp"
            app:layout_goneMarginLeft="52dp"
            android:background="@drawable/shape_rect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Email2Background" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageAndNameBackground"
            app:layout_constraintStart_toStartOf="@+id/imageAndNameBackground"
            app:layout_constraintTop_toTopOf="@+id/imageAndNameBackground"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/contactDetailsName"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/contact_name"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageAndNameBackground"
            app:layout_constraintEnd_toEndOf="@+id/imageAndNameBackground"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageAndNameBackground" />

        <TextView
            android:id="@+id/contactDetailsPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/phone_number"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/PhoneNumber1Background"
            app:layout_constraintEnd_toEndOf="@+id/PhoneNumber1Background"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/PhoneNumber1Background"
            app:layout_constraintTop_toTopOf="@+id/PhoneNumber1Background" />

        <TextView
            android:id="@+id/contactDetailsPhoneNumber2"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/phone_number_2"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/PhoneNumber2Background"
            app:layout_constraintEnd_toEndOf="@+id/PhoneNumber2Background"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/PhoneNumber2Background"
            app:layout_constraintTop_toTopOf="@+id/PhoneNumber2Background" />

        <TextView
            android:id="@+id/ContactDetailsEmail1"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/e_mail"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/Email1Background"
            app:layout_constraintEnd_toEndOf="@+id/Email1Background"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Email1Background"
            app:layout_constraintTop_toTopOf="@+id/Email1Background" />

        <TextView
            android:id="@+id/ContactDetailsEmail2"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/e_mail_2"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/Email2Background"
            app:layout_constraintEnd_toEndOf="@+id/Email2Background"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/Email2Background"
            app:layout_constraintTop_toTopOf="@+id/Email2Background" />

        <TextView
            android:id="@+id/ContactDetailsDescription"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/description"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/DescriptionBackground"
            app:layout_constraintEnd_toEndOf="@+id/DescriptionBackground"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/DescriptionBackground"
            app:layout_constraintTop_toTopOf="@+id/DescriptionBackground" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>